<div class="flex flex-col justify-center items-center p-6 space-y-6">
  <%= image_tag "icon.png", class: "w-20 rounded-full" %>

  <h2 class="text-3xl/9 text-neutral-700">Restablecer contrase単a</h2>

  <%= form_with(model: resource, url: password_path(resource_name), method: :put, local: true, class: "flex flex-col w-full max-w-md space-y-6 mb-12") do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <%= render 'shared/alert' if flash[:alert] %>

    <%= render PasswordFieldComponent.new(form: f, attribute: :password, label: "Nueva contrase単a", input_options: { required: true, autocomplete: "new-password", autofocus: true }, hint: "La contrase単a debe tener al menos #{@minimum_password_length} caracteres") %>

    <%= render ButtonComponent.new(form: f, label: "Restablecer contrase単a") %>
  <% end %>
</div>
