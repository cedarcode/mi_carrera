<div class="mdc-deprecated-list-group">
  <h3 class="mdc-deprecated-list-group__subheader mdc-typography--headline5 sign-in">Restablecer Contraseña</h3>
  <ul class="mdc-deprecated-list growing-text-list">

    <%= form_with(model: resource, url: password_path(resource_name), method: :put, local: true) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <li class="form-input-container">
        <%= render 'shared/password_field', f:, resource:, field: :password, label_text: "Nueva contraseña", autocomplete: "new-password", required: false %>
        <%= render 'shared/info_and_errors', resource:, field: :password, text: "#{@minimum_password_length} caracteres mínimo" %>
      </li>

      <li class="form-input-container sign-in">
        <%= render(ButtonComponent.new(type: 'submit').with_content("Restablecer contraseña")) %>
      </li>
    <% end %>

    <%= render "devise/shared/links" %>
  </ul>
</div>
