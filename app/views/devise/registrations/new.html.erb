<div class="flex flex-col justify-center items-center p-6 space-y-4">
  <%= image_tag "icon.png", class: "w-16 rounded-full" %>

  <h2 class="text-center text-3xl/9 text-neutral-700">Registrarse</h2>

  <div class="w-full max-w-sm space-y-6 py-6">
    <%= form_with(model: resource, url: registration_path(resource_name), local: true, class: "space-y-6 bg-neutral-100 p-6 border-1 border-neutral-200 rounded-lg shadow-sm") do |f| %>
      <%= render EmailFieldComponent.new(form: f, attribute: :email, label: "Correo electrónico", input_options: { required: true, autofocus: true, autocomplete: "email" }) %>

      <%= render PasswordFieldComponent.new(form: f, attribute: :password, label: "Contraseña", input_options: { required: true, autocomplete: "new-password" }, hint: "La contraseña debe tener al menos #{@minimum_password_length} caracteres") %>

      <%= render PasswordFieldComponent.new(form: f, attribute: :password_confirmation, label: "Confirma tu contraseña", input_options: { required: true, autocomplete: "new-password" }) %>

      <li class="form-input-container sign-in">
        <%= f.button class: "mdc-button mdc-button--raised" do %>
          <span class="mdc-button__ripple"></span>
          <span class='mdc-button__label'>
            Registrarte
          </span>
        <% end %>
      </li>
    <% end %>

    <p class="text-center text-sm/6 text-neutral-500">
      ¿Ya estás registrado?

      <%= link_to "Ingresar", new_session_path(resource), class: "font-semibold text-neutral-700 hover:text-indigo-700" %>
    </p>

    <hr class="border-neutral-200" />

    <%= render "shared/sso_buttons" %>
  </div>
</div>
