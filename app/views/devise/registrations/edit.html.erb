<div class="mdc-deprecated-list-group">
  <h3 class="mdc-deprecated-list-group__subheader mdc-typography--headline5 sign-in">Editar Usuario</h3>
  <ul class="mdc-deprecated-list growing-text-list">

    <%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true, class: "space-y-6") do |f| %>

      <%= render TextFieldComponent.new( form: f, attribute: :email, label: "Correo electrónico", type: :email) %>

      <%= render TextFieldComponent.new( form: f, attribute: :password, label: "Nueva contraseña", type: :password, input_options: { data: { show_password_target: "password" } }, container_options: { data: { controller: "show-password" } }) do |component| %>
        <% component.with_trailing_icon do %>
          <%= render "shared/password_visibility_button" %>
        <% end %>

        <% component.with_hint do %>
          <span class="text-xs text-gray-500">
            La contraseña debe tener al menos 6 caracteres
          </span>
        <% end %>
      <% end %>

      <%= render TextFieldComponent.new( form: f, attribute: :password_confirmation, label: "Confirma tu nueva contraseña", type: :password, input_options: { data: { show_password_target: "password" } }, container_options: { data: { controller: "show-password" } }) do |component| %>
        <% component.with_trailing_icon do %>
          <%= render "shared/password_visibility_button" %>
        <% end %>
      <% end %>

      <%= render TextFieldComponent.new( form: f, attribute: :current_password, label: "Contraseña actual", type: :password, input_options: { required: true, data: { show_password_target: "password" } }, container_options: { data: { controller: "show-password" } }) do |component| %>
        <% component.with_trailing_icon do %>
          <%= render "shared/password_visibility_button" %>
        <% end %>

        <% component.with_hint do %>
          <span class="text-xs text-gray-500">
            Necesitamos tu contraseña actual para validar los cambios
          </span>
        <% end %>
      <% end %>

      <li class="form-input-container sign-in">
        <%= f.button class: "mdc-button mdc-button--raised" do %>
          <span class="mdc-button__ripple"></span>
          <span class='mdc-button__label'>
            Guardar
          </span>
        <% end %>
      </li>

    <% end %>

  </ul>
</div>
