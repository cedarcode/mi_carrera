<div class="mdc-menu-surface--anchor" data-controller="menu">
  <a class="mdc-icon-button material-icons" data-action="click->menu#openMenu">
    more_vert
  </a>

  <div class="mdc-menu mdc-menu-surface" data-target="menu.content">
    <div class="mdc-list">
      <%= link_to all_subjects_path, class: "mdc-list-item" do %>
        <span class="mdc-list-item__text">
          Materias
        <span>
      <% end %>

      <%= link_to account_path, class: "mdc-list-item" do %>
        <span class="mdc-list-item__text">
          Avance de carrera
        </span>
      <% end %>

      <% if current_user %>
        <%= link_to session_path, method: 'delete', class: "mdc-list-item" do %>
          Salir
        <% end %>
      <% else %>
        <%= link_to new_session_path, class: "mdc-list-item" do %>
          Ingresar
        <% end %>

        <%= link_to new_account_path, class: "mdc-list-item" do %>
          Registrarte
        <% end %>
      <% end %>
    </div>
  </div>
</div>
