<div class="absolute right-0 mt-2 min-w-48 bg-white border border-gray-200 rounded-lg shadow-lg z-50 hidden" data-user-menu-target="menu">
  <ul class="py-2 text-m text-gray-800" role="menu" tabindex="-1">
    <% if current_user %>
      <div class="px-4 pb-1">
        <%= current_user.email %>
      </div>
    <% else %>
      <%= link_to "Ingresar", new_user_session_path, class: "block px-4 py-2 hover:bg-gray-100", tabindex: 0 %>
    <% end %>
    <li class="border-t border-gray-100 my-1"></li>
    <%= link_to "Resumen por Grupo", profile_path, class: "block px-4 py-2 hover:bg-gray-100", tabindex: 0 %>
    <% if current_user %>
      <li class="border-t border-gray-100 my-1"></li>
      <%= link_to "Editar Perfil", edit_user_registration_path, class: "block px-4 py-2 hover:bg-gray-100", tabindex: 0 %>
      <%= link_to "Subir Escolaridad", new_transcript_path, class: "block px-4 py-2 hover:bg-gray-100", tabindex: 0 %>
    <% end %>
    <% if Features::ChangingDegrees.enabled? %>
      <%= link_to edit_user_degrees_path, class: "flex items-center px-4 py-2 hover:bg-gray-100", tabindex: 0 do %>
        Cambiar Carrera
        <span class="ms-2 bg-purple-100 border text-primary text-[10px] uppercase rounded-full py-0.5 px-2">Nuevo</span>
      <% end %>
    <% end %>
    <% if current_user %>
      <%= link_to "Salir", destroy_user_session_path, data: { turbo: true, turbo_method: :delete }, class: "block px-4 py-2 hover:bg-gray-100", tabindex: 0 %>
    <% end %>
  </ul>
</div>
