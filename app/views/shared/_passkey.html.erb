<%= form_with(url: session_path(resource_name), class: "w-full", method: :post, data: { action: "passkeys#get:prevent", controller: "passkeys", passkeys_public_key_param: @get_passkey_options }) do |f| %>
  <%= f.hidden_field :passkey_public_key, data: { "passkeys-target": "hiddenPasskeyPublicKeyInput" } %>
  <%= f.button type: "submit", class: "w-full flex items-center justify-center p-2 rounded-lg border border-neutral-300 cursor-pointer bg-white space-x-1" do %>
    <%= image_tag "passkey-icon.png", class: "w-6" %>
    <span class="text-sm text-neutral-700 font-semibold">Ingresar con Passkey</span>
  <% end %>
<% end %>
