<div class="flex flex-col gap-3 items-start py-6 px-4 sm:flex-row sm:gap-4 sm:items-center">
  <span class="text-sm/6 text-gray-900 font-bold whitespace-nowrap">
    Planificar materia:
  </span>
  <%= form_with(
    model: SubjectPlan.new,
    url: subject_plans_path,
    method: :post,
    data: { controller: "autosave-check" },
    class: 'flex items-center gap-4 flex-1',
    local: false
  ) do |form| %>
    <%= form.select(
      :subject_id,
      subjects.map { |s| [display_planned_subject_name_and_code(s), s.id] },
      {},
      {
        class: 'flex-1 w-full rounded-md text-sm shadow-sm border border-gray-300 truncate cursor-pointer',
        data: { action: "click->autosave-check#stopPropagation" }
      }
    ) %>
    <%= form.select(
      :semester,
      (1..10).map { |i| ["Sem. #{i}", i] },
      {},
      {
        class: 'w-20 rounded-md px-1 text-sm/6 text-gray-900 shadow-sm border border-gray-300 truncate cursor-pointer',
        data: { action: "click->autosave-check#stopPropagation" }
      }
    ) %>
    <%= form.button type: :submit, class: "cursor-pointer", data: { action: "click->autosave-check#update" } do %>
      <svg width="20" height="20" fill="none" stroke="#9ca3af" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v8m-4-4h8"></path>
      </svg>
    <% end %>
  <% end %>
</div>
