<% content_for :navigation_icon do %>
  <%= nav_icon("arrow_back", (request.referer ? 'javascript:history.back()' : root_path)) %>
<% end %>

<% content_for :credits do %>
  <%= render 'shared/credits_counter' %>
<% end %>

<div class="mdc-list-group subjects-list">
  <% @subjects.group_by { |subject| subject.semester }.each do |semester, subjects| %>
    <h3 class="mdc-list-group__subheader mdc-typography--subtitle2">
      <% if semester.present? %>
        <%= semester_to_text(semester) %> semestre
      <% else %>
        Materias optativas
      <% end %>
    </h3>

    <%= render partial: "subjects/subjects_list", locals: { subjects: subjects } %>

    <hr class="mdc-list-divider">
  <% end %>
</div>
