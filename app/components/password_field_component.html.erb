<%= form.label attribute, label, class: "text-sm/6 font-medium text-gray-700 with-error:text-red-600 my-1" %>

<div class="relative w-full my-1" data-controller="show-password">
  <%= form.password_field attribute, input_options %>

  <%= button_tag type: "button", class: STYLES[:icon], data: { action: "show-password#toggle" } do %>
    <span class="material-icons" data-show-password-target="icon">visibility</span>
  <% end %>
</div>

<% if error_messages.present? %>
  <div class="text-red-600 text-sm/6 my-1">
    <%= error_messages %>
  </div>
<% elsif hint.present? %>
  <div class="text-gray-500 text-sm/6 my-1">
    <%= hint %>
  </div>
<% end %>
